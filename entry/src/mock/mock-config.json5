{
  // Mock configuration for sensor testing in emulator
  // Enable in DevEco Studio: Build Configuration -> Enable Mock

  "mockList": [
    {
      // Mock heart rate sensor data
      "name": "@kit.SensorServiceKit",
      "methods": {
        "sensor.getSensorList": {
          "returns": [{ "sensorId": 0, "sensorName": "HEART_RATE" }]
        }
      }
    }
  ],

  // Sensor simulation scenarios for testing
  "scenarios": {
    // Normal resting heart rate scenario
    "normalRest": {
      "description": "Simulates normal resting HR (60-80 bpm)",
      "heartRateSequence": [72, 70, 74, 71, 73, 72, 70, 75, 71, 72],
      "accelerometerMagnitude": 0.3
    },

    // Elevated HR with no movement (stress scenario)
    "stressDetection": {
      "description": "Simulates stress - elevated HR while stationary",
      "heartRateSequence": [72, 75, 85, 95, 105, 110, 108, 112, 110, 105],
      "accelerometerMagnitude": 0.4
    },

    // Elevated HR with movement (exercise scenario)
    "exerciseDetection": {
      "description": "Simulates exercise - elevated HR while moving",
      "heartRateSequence": [72, 80, 95, 110, 125, 130, 135, 130, 128, 125],
      "accelerometerMagnitude": 3.5
    },

    // HR spike scenario
    "hrSpike": {
      "description": "Simulates sudden HR spike",
      "heartRateSequence": [70, 72, 71, 95, 98, 75, 73, 72, 71, 70],
      "accelerometerMagnitude": 0.5
    },

    // Recovery scenario
    "recovery": {
      "description": "Simulates HR returning to normal after elevation",
      "heartRateSequence": [110, 105, 98, 90, 85, 80, 78, 75, 73, 72],
      "accelerometerMagnitude": 0.3
    }
  },

  // Test data for UI rendering
  "testStates": {
    "NORMAL": {
      "heartRate": 72,
      "backgroundColor": "#1A1A2E",
      "accentColor": "#4ECDC4"
    },
    "CHECKING": {
      "heartRate": 105,
      "backgroundColor": "#2D2D44",
      "accentColor": "#FFE66D"
    },
    "EXERCISE": {
      "heartRate": 130,
      "backgroundColor": "#1A3A2E",
      "accentColor": "#95E1A3"
    },
    "STRESS": {
      "heartRate": 115,
      "backgroundColor": "#3A1A1A",
      "accentColor": "#FF6B6B"
    }
  }
}
